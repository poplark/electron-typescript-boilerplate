{
  "name": "electron-typescript-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate of electron with typescript",
  "main": "build/main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf ./build",
    "build:main": "webpack --config config/webpack.main.config.js",
    "build:preload": "webpack --config config/webpack.preload.config.js",
    "build:renderer": "webpack --config config/webpack.renderer.config.js",
    "build": "npm run clean && npm run build:main && npm run build:preload && npm run build:renderer"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poplark/electron-typescript-boilerplate.git"
  },
  "keywords": [
    "electron",
    "typescript",
    "boilerplate"
  ],
  "author": "poplark",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/poplark/electron-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/poplark/electron-typescript-boilerplate#readme",
  "devDependencies": {
    "copy-webpack-plugin": "^5.1.1",
    "electron": "^7.1.7",
    "rimraf": "^3.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
